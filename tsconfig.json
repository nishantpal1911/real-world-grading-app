{
  "compilerOptions": {
    "sourceMap": true,
    "baseUrl": ".",
    "rootDir": ".",
    "paths": {
      "src/*": ["./src/*"]
    },
    "outDir": "./dist",
    "target": "ES2018",
    "module": "commonjs",
    "strict": true,
    "lib": ["esnext"],
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "skipLibCheck": true,
    "experimentalDecorators": true,
    "strictPropertyInitialization": false,
    "emitDecoratorMetadata": true
  },
  "include": ["src", "tests"],
  "exclude": ["dist"]
}
