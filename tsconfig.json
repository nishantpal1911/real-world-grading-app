{
  "compilerOptions": {
    "sourceMap": true,
    "rootDir": "src",
    // "outDir": "./dist",
    "target": "ES2018",
    "module": "commonjs",
    "strict": true,
    "lib": ["esnext"],
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,  
    "skipLibCheck": true
  },
  "include": ["src"],
  "exclude": ["dist", "tests"]
}
